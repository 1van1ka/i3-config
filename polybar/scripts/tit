#!/bin/bash

text="Это пример длинного текста, который будет перемещаться."
width=20

# Вычисляем длину текста
len=${#text}

# Основной цикл для перемещения текста
for (( i=0; i<=len; i++ )); do
  # Получаем подстроку длиной $width
  substring="${text:i:$width}"
  
  # Очищаем экран и выводим подстроку
  clear
  printf "%-*s" $width "$substring"
  
  # Задержка перед следующей итерацией
  sleep 0.2
done
